#include <Arduino.h> 
 
int W, X, Y, Z; 
int D, C, B, A; 
 
void disp_7447(int D, int C, int B, int A) 
{ 
  digitalWrite(2, A); //LSB 
  digitalWrite(3, B);  
  digitalWrite(4, C);  
  digitalWrite(5, D); //MSB 
} 
 
void setup() { 
  pinMode(2, OUTPUT);   
  pinMode(3, OUTPUT); 
  pinMode(4, OUTPUT); 
  pinMode(5, OUTPUT); 
  pinMode(6, INPUT); 
  pinMode(7, INPUT); 
  pinMode(8, INPUT); 
  pinMode(9, INPUT); 
  pinMode(13, OUTPUT); 
} 
 
void loop() { 
  for (int i = 0; i <= 9; i++) {
    digitalWrite(13, HIGH);
    delay(100);

    // Convert decimal to binary-coded decimal (BCD)
    A = i % 2;
    B = (i / 2) % 2;
    C = (i / 4) % 2;
    D = (i / 8) % 2;

    disp_7447(D, C, B, A);

    digitalWrite(13, LOW);
    delay(500);
  }
}
